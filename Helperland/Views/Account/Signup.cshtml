@using Helperland
@model Helperland.Models.User
@{
    ViewData["Title"] = "Signup";
}

<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="CSS/bootstrap.min.css">
    <!-- Bootstrap Icon CDN Links -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">

    <!-- External CSS File -->
    <link href="~/css/Signup.css" rel="stylesheet" />
    <!--JS links-->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js" integrity="sha384-VHvPCCyXqtD5DqJeNxl2dtTyhF78xXNXdkwX1CZeRusQfRKp+tA7hAShOK/B/fQ2" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">


    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">



    <title>Homepage</title>
</head>
<body>
    <!-- header code start -->
    <section id="#signup-heading">
        <nav class="navbar navbar-expand-lg navbar-fixed-top ">
            <div class="container-fluid ">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <img src="~/IMAGES/logo.png" height="28" alt="CoolBrand" />
                </a>
                <button class="navbar-toggler ddmenu" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <img src="~/IMAGES/list.svg" alt="List" width="50px" height="50px">

                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarCollapse">
                    <div class="navbar-nav text-light">
                        <a asp-controller="Home" asp-action="Book_service" class="nav-item nav-link menu menu1">Book Now</a>
                        <a asp-controller="Home" asp-action="Price" class="nav-item nav-link menu">Prices & Services</a>
                        <a href="#" class="nav-item nav-link menu">Warranty</a>
                        <a href="#" class="nav-item nav-link menu">Blog</a>
                        <a asp-controller="Home" asp-action="Contact" class="nav-item nav-link menu">Contact</a>
                        <button class="nvbarbtn">Login</button>
                        <a asp-controller="Account" asp-action="Provider" id="nvbarbtn" class="nvbarbtn" style="background:#1d7a8c;">Become a Helper </a>

                        @*<button class="nvbarbtn">Become a Helper</button>*@
                    </div>
                </div>
            </div>
        </nav>
    </section>
    <!-- header code end -->
    <!-- middle code start -->
    <section class="signup-heading">
        <div class="heading">
            <h1 class="text-center">Create an account</h1>
        </div>
        <div class="d-flex star justify-content-center">
            <img src="~/IMAGES/star.png" alt="" />
        </div>

        <div class="signup-table justify-content-center align-items-center ">
            <div class="text-center text-danger mb-3">
                <b style="margin-left:23%; font-size:18px;">@ViewBag.Message</b>
            </div>

            <form asp-controller="Account" asp-action="Signup" method="post">
                <table>
                    <tr>
                        <td style="width: 51%;" class="">
                            <input  id="fname" class="form-control" asp-for="FirstName" placeholder="First name" required />
                        </td>
                        <td class="">
                            <input  id="lname" class="form-control" asp-for="LastName" placeholder="Last name" required />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input  id="" class="form-control" asp-for="Email" placeholder="Email address" required />
                        </td>
                        <td class="input-group mx-0 row">

                            <input type="text" class="form-control input-group-text col-2 px-0" id="countryCode" placeholder="+91" required />
                            <input id="phone" class="form-control col-10" max="10" asp-for="Mobile" placeholder="Phone Number" required />

                        </td>
                    </tr>
                    @*<tr>
                        <td style="padding-bottom:0;">
                            <input type="hidden" asp-for="UserTypeId" value="1" />

                        </td>
                    </tr>*@
                    <tr>
                        <td>
                            <input type="password" class="form-control" id="password" asp-for="Password" placeholder="Password" required />
                        </td>
                        <td>
                            <input type="password" class="form-control" id="confirm-password" asp-for="Password" placeholder="Confirm Password" required />
                            <span id="confirm-password-message" asp-validation-for="Password" class="text-danger"></span>
                        </td>
                    </tr>

                    <tr class="form-check">
                        <td colspan="2">
                            <input type="checkbox" class="form-check-input" id="readpolicy" required>
                            <label class="form-check-label" style="padding-left: 0%;" for="readpolicy">I have read the <a>Privacy Policy</a></label>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" class="text-center">
                            <button type="submit" id="register" value="to register" class="btn register">Register</button>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
        <div class="a-footer">
            
            @*<button type="submit" id="register" value="to register" class="btn register">Register</button>*@
            <p> Already registered? <a href="#" data-target="#myModal" data-dismiss="modal" data-toggle="modal">Login now</a></p>
        </div>
    </section>
    <!--middle code end-->
    <!-- Modal code start -->
    <!--LOGIN modal code start-->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Login to your account</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group d-flex">
                            <input type="text" name="" class="form-control" placeholder="Email" required />
                            <img src="~/IMAGES/person_black_24dp.svg" alt="person" />
                        </div>
                        <div class="form-group d-flex">
                            <input type="password" name="" class="form-control" placeholder="Password" required />
                            <img src="~/IMAGES/lock_black_24dp.svg" alt="lock" />
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="rememberme">
                            <label class="form-check-label" for="rememberme">Remember me</label>
                        </div>
                        <button class="log-in rounded-pill m-auto d-flex align-items-center justify-content-center " data-toggle="modal">
                            Login
                        </button>
                    </form>
                </div>
                <div class=" p-footer">
                    <a href="#" class="" data-dismiss="modal" data-target="#myModal2" data-toggle="modal">Forgot password?</a>
                    <p> Don't have an account? <a asp-controller="Account" asp-action="Signup" class="">Create an account</a></p>
                </div>
            </div>
        </div>
    </div>
    <!--LOGIN modal code end-->
    <!--FORG0T PASSWORD CODE START-->
    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModal2Label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModal2Label">Forgot password</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group ">
                            <input type="text" name="" class="form-control" placeholder="Email Address" required />
                        </div>
                        <button class="send rounded-pill m-auto d-flex align-items-center justify-content-center " data-toggle="modal">
                            Send
                        </button>
                    </form>
                </div>
                <div class=" p-footer">
                    <a href="#" class="" data-dismiss="modal" data-target="#myModal" data-toggle="modal">Login now</a>
                </div>
            </div>
        </div>
    </div>
    <!--FORG0T PASSWORD CODE END-->
    <!--LOGIN-->
    <script>
        $(document).ready(function () {
            $("#myModal").modal();
        });
    </script>
    <!--FORGOT PASSWORD-->
    <script>
        $(document).ready(function () {
            $("#myModal2").modal();
        });
    </script>
    <!-- Modal code end -->
    <!-- JS code -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js">
    </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js">
    </script>


    <!-- bootstrap js cdn  -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    <script>
        var pwd = document.getElementById("password");
        var conf = document.getElementById("confirm-password");
        var submit = document.getElementById("register");
        var re_pwd_message = document.getElementById("confirm-password-message");
        conf.addEventListener("change", function () {
            if (pwd.value != conf.value) {
                submit.disabled = true;
                re_pwd_message.textContent = "password does not matched!"
            }
            else {
                submit.disabled = false;
            }
        });
    </script>





    <!-- Optional JavaScript; choose one of the two! -->
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    <!-- javascript code start-->
    <script src="~/Javascript/main.js"></script>
    <script src="~/Javascript/bootstrap.bundle.min.js"></script>
    <!--javasrcipt code end-->
</body>
</html>

