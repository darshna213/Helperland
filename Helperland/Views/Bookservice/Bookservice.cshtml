
@{
    ViewData["Title"] = "Bookservice";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <title>book-service</title>
    <!--bootstrap css-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="CSS/bootstrap.min.css" />
    <!--external css-->
    <link href="~/css/Bookservice.css" rel="stylesheet" />
    <!--JS links-->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.min.js" integrity="sha384-VHvPCCyXqtD5DqJeNxl2dtTyhF78xXNXdkwX1CZeRusQfRKp+tA7hAShOK/B/fQ2" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

</head>
<body>
    <!--header code start-->
    <section id="book-service">
        <nav class="navbar navbar-expand-lg navbar-fixed-top ">
            <div class="container-fluid ">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <img src="~/IMAGES/logo.png" height="28" alt="CoolBrand" />
                </a>
                <button class="navbar-toggler ddmenu" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <img src="~/IMAGES/list.svg" alt="List" width="50px" height="50px">

                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarCollapse">
                    <div class="navbar-nav text-light">
                        <a asp-controller="Bookservice" asp-action="Bookservice" class="nav-item nav-link menu menu1">Book Now</a>
                        <a asp-controller="Home" asp-action="Price" class="nav-item nav-link menu">Prices & Services</a>
                        <a href="#" class="nav-item nav-link menu">Warranty</a>
                        <a href="#" class="nav-item nav-link menu">Blog</a>
                        <a asp-controller="Home" asp-action="Contact" class="nav-item nav-link menu">Contact</a>
                        <button class="nvbarbtn">Login</button>
                        <a asp-controller="Account" asp-action="provider" id="nvbarbtn" class="nvbarbtn">Become a Helper </a>

                        @*<button asp-action="provider" id="nvbarbtn" class="nvbarbtn">Become a Helper </button>*@
                    </div>
                </div>
            </div>
        </nav>
        <div>
            <img src="~/IMAGES/book-service-banner.jpg" class="img-fluid bg" />
        </div>
    </section>
    <!--header code end-->
    <!-- book-service heading code start-->
    <section class="book_service_heading">
        <div class="heading">
            <h1 class="text-center">Set up your cleaning service</h1>
        </div>
        <div class="d-flex star justify-content-center">
            <img src="~/IMAGES/star.png" alt="" />
        </div>
    </section>
    <!-- book-service heading code end-->
    <!--middle code start-->
    <section class="content container">
        <div class="row">
            <!--leftside code start-->
            <div class="leftside col-md-8" id="leftside">
                <!-- Classic tabs  start-->
                <div class="classic-tabs">

                    <ul class="nav " id="myClassicTabOrange" style="width:72%; " role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active show" id="profile-tab-classic-orange" data-toggle="tab" onclick="Tab1Click()" href="#profile-classic-orange"
                               role="tab" aria-controls="profile-classic-orange" aria-selected="false"><img src="~/IMAGES/setup-service.png" /> Setup Service</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disable-a-tag" id="follow-tab-classic-orange" data-toggle="tab" onclick="Tab2Click()" href="#follow-classic-orange"
                               role="tab" aria-controls="follow-classic-orange" aria-selected="true"><img src="~/IMAGES/schedule.png" />schedule & Plan</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disable-a-tag" id="contact-tab-classic-orange" data-toggle="tab" onclick="Tab3Click()" href="#contact-classic-orange"
                               role="tab" aria-controls="contact-classic-orange" aria-selected="false"><img src="~/IMAGES/details.png" /> Your Details</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disable-a-tag" id="awesome-tab-classic-orange" data-toggle="tab" onclick="Tab4Click()" href="#awesome-classic-orange"
                               role="tab" aria-controls="awesome-classic-orange" aria-selected="false"><img src="~/IMAGES/payment.png" /> Make Payment</a>
                        </li>
                    </ul>

                    <div class="tab-content card" id="myClassicTabContentOrange">
                        @await Html.PartialAsync("Setupservice")
                        @await Html.PartialAsync("Scheduleservice")
                        @await Html.PartialAsync("Addaddress")


                        <div class="tab-pane fade" id="awesome-classic-orange" role="tabpanel" aria-labelledby="awesome-tab-classic-orange">
                            <div style="width:108%;">
                                <p>Pay securely with Helperland payment gateway!</p>
                                @*<form class="setup-service">*@
                                <label style="margin-bottom: 0;">Promo Code (optional)</label><br>
                                <input type="text" id="postal-code" placeholder="Promo Code (optional)" />
                                <input class="apply-btn button" type="submit" value="Apply">
                                <hr>
                                <div class="card-number">

                                    <input type="text" placeholder="Card number" required />

                                </div>
                                <hr>
                                <div class="policy d-flex">
                                    <input type="checkbox" id="" required />
                                    <p>
                                        I accepted terms and Conditions. the cancellation policy and Privacy policy, I confirm the Helperland start to execute
                                        the contract before the expiry of the withdrawal period and I lose my right of withdrawal as a consumer with full performance of the contract.
                                    </p>
                                </div>
                                <hr>
                                @*</form>*@
                                <button type="button" class="btn complete-btn"  data-toggle="modal" data-target="#completebookingmodal" id="payment-complete-booking">Complete Booking</button>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- Classic tabs  end-->
                <!--completebooking modal-->
                <div class="modal fade" id="completebookingmodal" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label=""><span>×</span></button>
                            </div>

                            <div class="modal-body">

                                <div class="thank-you-pop">
                                    <img src="http://goactionstations.co.uk/wp-content/uploads/2017/03/Green-Round-Tick.png" alt="">
                                    <h1>Booking has been successfully submitted</h1>
                                    <p>Service Request Id: 8488</p>
                                    <button class="btn" type="button">Ok</button>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <!--leftside code end-->
            <!--rightside code start-->

            <div class="rightside col-md-4" id="rightside">
                <!--card code start-->
                <div class="card P-summary">
                    <div class="p-heading">
                        <p>Payment Summary</p>
                    </div>
                    <div class="date-time">
                        <p id="payment-summary-date-time">01/01/2018 4:00 pm</p>
                        <p id="payment-summary-bed-bath">1 bed,1 bath</p>
                    </div>
                    <div class="duration">
                        <h6>Duration</h6>
                        <div class=" justify-content-between duration-title">
                            <div>
                                <p>Basic <span style="float: right !important;" class="duration-print" id="payment-summary-basic-hour">3 Hrs</span><br /></p>

                                <span id="payment-summary-inside-cabinet" class="d-none">
                                    Inside cabinets
                                    <span style="float: right;">30 Min</span><br />
                                </span>
                                <span id="payment-summary-inside-fridge" class="d-none">Inside Fridge <span style="float:right;">30 Min</span><br /></span>
                                <span id="payment-summary-inside-oven" class="d-none">Inside Oven <span style="float:right;">30 Min</span><br /></span>
                                <span id="payment-summary-laundry-wash" class="d-none">Laundry wash & dry <span style="float:right;">30 Min</span><br /></span>
                                <span id="payment-summary-interior-window" class="d-none">Interior windows<span style="float:right;">30 Min</span><br /></span>
                            </div>
                            @*<div style="text-align:right">
                                    <p id="payment-summary-basic-hour">3 Hrs</p>
                                    <p>30 mins</p>
                                    <p>30 mins</p>
                                    <p>30 mins</p>
                                </div>*@
                        </div>
                        <div class="d-flex justify-content-center align-items-center">
                            <hr / class="line">
                        </div>
                        <div class="d-flex justify-content-between duration-total " >
                            <p>Total Service Time</p>
                            <p style="text-align:right" id="payment-summary-total-time">3.5 Hrs</p>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between duration-title">
                            <div>
                                <p>Per cleaning</p>
                                <p>Discount</p>
                            </div>
                            <div style="text-align:right; font-weight:bold;">
                                <p >$87</p>
                                <p>-$27</p>
                            </div>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between duration-payment">

                            <p class="total-payment">Total Payment</p>
                            <p class="total " style="text-align:right" id="payment-summary-total-payment">$54</p>
                        </div>
                        <div class="d-flex justify-content-between duration-title">
                            <p>Effective Price</p>
                            <p style="text-align:right; font-weight:bold; font-size:15px;">$50.04</p>
                        </div>
                        <p class="duration-title">You will save 20% according to 35a EStG.</p>
                        <div class="smiley">
                            <p> <img src="~/IMAGES/smiley.png" /> See what is always included</p>
                        </div>
                    </div>
                </div>
                <!--card code end-->
                <!--question code start-->
                <div class="question">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="fcstm" role="tabpanel" aria-labelledby="forcustom">

                            <div class="accordion" id="accordionone">
                                <div class="accordion_item">
                                    <h2 class="accordion-header accordion_btn collapsed" data-bs-toggle="collapse" data-bs-target="#fc_2">
                                        Which Helperland professional will come to my place?
                                    </h2>
                                    <div id="fc_2" class="accordion-collapse collapse" data-bs-parent="#accordionone">
                                        <div class="accordion-body">
