
@{
    ViewData["Title"] = "SPNewservicerequest";
}
<!--row-table code start-->
<div class="container-fluid row d-none" id="sp-newservicerequest">
    <div class="col">
        <div class="d-flex payment-status">
            <span class="sh-heading">Service Area</span>
            <select>
                <option selected>25km</option>
                <option>35km</option>
                <option>45km</option>
            </select>
        </div>
        <table id="new-service-request-table" class="table table-hover">
            <thead>
                <tr>
                    <th width="116px"> Service ID <img src="~/IMAGES/up-down-sort.png"></th>
                    <th width="138px">  Service date </th>
                    <th> Customer details</th>
                    <th data-target="#new-service-request-row-detail-modal" data-toggle="modal">Payment</th>
                    <th width="120px">Time conflict</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>


            </tbody>
        </table>
    </div>
</div>
<!--row-table code end-->
<!-- row details modal code start-->
<input class="row-detail-hidden-input d-none" data-target="#new-service-request-row-detail-modal" data-toggle="modal" type="button" id="new-service-request-row-detail-modal-open-button">
<div class="modal fade" id="new-service-request-row-detail-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModal2Label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header" style="margin-top:16px;">
                <h5 class="modal-title service-detail-body " id="exampleModal2Label">Service Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class=" d-flex service-detail-leftside" style="width:100%">
                    <div style="width:50%">
                        <p class="date-time-duration" id="newserviceRequestDateTime">05/10/2021 8:00-11:30</p>
                        <p><b>Duration:</b><span id="newserviceRequestDuration"> 3.5 Hrs</span></p>
                        <hr />
                        <p><b>Service Id:</b><span id="newServiceRequestId">8425</span></p>
                        <p id="serviceExtra"><b>Extras:</b> Inside cabinets</p>
                        <p id="serviceExtra1" class="d-none"><b>Extras:</b> Inside cabinets</p>
                        <p id="serviceExtra2" class="d-none"><b>Extras:</b> Inside fridge</p>
                        <p id="serviceExtra3" class="d-none"><b>Extras:</b> Inside oven</p>
                        <p id="serviceExtra4" class="d-none"><b>Extras:</b> Laundry Wash & Dry</p>
                        <p id="serviceExtra5" class="d-none"><b>Extras:</b> interior Windows</p>
                        <p><b>Total Payment:</b> <span class="total-payment" id="total-payment">87,50 &euro;</span></p>
                        <hr />
                        <p><b>Customer Name:</b><span id="newserviceRequestname">Gaurang patel</span> </p>
                        <p><b>Service Address:</b><span id="newserviceRequestAddress">Monghibai Road Vile Parle</span> </p>

                        <p><b>Distance: </b><span id="newServiceRequestPhone">45km</span></p>

                        <hr />
                        <p><b>Comments</b></p>
                        <p>
                            I don't have pets at home
                        </p>
                        <hr />
                        <div id="new-service-request-modal-btns-div">
                            <button class="btn accept-btn" data-dismiss="modal" data-target="#accept-modal" data-toggle="modal" id="new-service-request-accept-modal-btn" type="button"><span class="glyphicon glyphicon-ok"></span>Accept</button>
                        </div>
                    </div>
                    <div style="width:50%">
                        <iframe width="233" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                                src="https://www.openstreetmap.org/export/embed.html?bbox=72.48727798461915%2C23.032188951217627%2C72.52744674682619%2C23.05979267762741&amp;layer=mapnik"></iframe>
                        <br />
                        <small><a href="https://www.openstreetmap.org/#map=15/23.0460/72.5074">View Larger Map</a></small>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- row details modal code end-->
<!--accept modal code start-->
<input class="accept-hidden-input d-none" data-target="#accept-modal" data-toggle="modal" type="button" id="accept-modal-open-button">
<div class="modal fade" id="accept-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModal2Label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title accept-service-request" id="exampleModal2Label">Accept Service Request</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group ">
                        <input type="hidden" id="acceptId" name="acceptID" />
                        <p class="accept-heading">Why you want to accept the service request?</p>
                        <textarea class="modal-textarea" id="accept-modal-textarea" style="color:#646464;" required></textarea>
                    </div>
                    <button class="accept-now rounded-pill m-auto d-flex align-items-center justify-content-center" id="accept-now-btn" type="button" data-dismiss="modal">
                        Accept Now
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<!--accept modal code end-->
