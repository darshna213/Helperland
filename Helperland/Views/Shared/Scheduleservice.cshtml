@model Helperland.Models.Scheduleservice
@{
    ViewData["Title"] = "Scheduleservice";
}

<div class="tab-pane fade" id="follow-classic-orange" role="tabpanel" aria-labelledby="follow-tab-classic-orange">
    <div class="schedule-plan">
        <p>Select number of rooms and bath</p>
        <form id="Scheduleservice" class="rooms-bath" asp-controller="Bookservice" asp-action="Scheduleservice" method="post">
            <select>
                <option selected value="1">1 bed</option>
                <option value="2">2 bed</option>
                <option value="3">3 bed</option>

            </select>
            <select>
                <option selected value="1">1 bath</option>
                <option value="2">2 bath</option>
                <option value="3">3 bath</option>

            </select>
        </form>
        <hr>
    </div>
    <div class="room-cleaner d-flex">
        <div class="clean-time">
            <p>When do you need the cleaner?</p>
            <form id="Scheduleservice" class="d-flex flex-wrap" asp-controller="Bookservice" asp-action="Scheduleservice" method="post">
                <div class="input-group me-2">
                    <span class="input-group-text" id="basic-addon1" style="background-color: #fff; border-right: none;"> <img src="~/IMAGES/admin-calendar-blue.png" alt="calander"> </span>
                    <input type="text" class="form-control" id="from-date" asp-for="Date" style="border-left: none;" placeholder="01/01/2018" aria-label="date" aria-describedby="basic-addon1">

                </div> 
               
                    <select asp-for="time">
                        <option selected value="1">2:00PM</option>
                        <option value="2">4:00PM</option>
                        <option value="3">6:00PM</option>

                    </select>
              
            </form>

        </div>
        <div class="clean-hour">
            <p>How long do you need your cleaner to stay?</p>
            <form id="Scheduleservice" class="">
                <select asp-for="Duration">
                    <option selected value="1">3.0 Hrs</option>
                    <option value="2">6.0 Hrs</option>
                    <option value="3">9.0 Hrs</option>

                </select>
            </form>
        </div>

    </div>
    <hr style="margin-top: 30px;">
    <!--extra service code start-->
    <div class="extra-service">
        <div class="extra-service-heading">
            <p>Extra Services</p>
        </div>
        <div class="d-flex align-items-center justify-content-between flex-wrap service-icons">
           
                <div>
                    <div class="rounded-circle d-flex justify-content-center align-items-center s-icon" >
                        <img src="~/IMAGES/3.png" alt="3" />
                    </div>
                    <div class="text-center image-heading">
                        Incide Cabinets
                    </div>

                </div>

                <div>
                    <div class="rounded-circle d-flex justify-content-center align-items-center s-icon">
                        <img src="~/IMAGES/5.png" alt="5" />
                    </div>
                    <div class="text-center image-heading">
                        Incide Fridge
                    </div>

                </div>

                <div>
                    <div class="rounded-circle d-flex justify-content-center align-items-center s-icon">
                        <img src="~/IMAGES/4.png" alt="4" />
                    </div>
                    <div class="text-center image-heading">
                        Inside Oven
                    </div>

                </div>

                <div>
                    <div class="rounded-circle d-flex justify-content-center align-items-center s-icon">
                        <img src="~/IMAGES/2.png" alt="2" />
                    </div>
                    <div class="text-center image-heading">
                        Laundry wash & dry
                    </div>

                </div>

                <div>
                    <div class="rounded-circle d-flex justify-content-center align-items-center s-icon">
                        <img src="~/IMAGES/1.png" alt="1" />
                    </div>
                    <div class="text-center image-heading">
                        Interior windows
                    </div>
                </div>
            
        </div>
        <hr style="margin-top: 30px;">
    </div>
    <!--extra service code end-->
    <div class="comment">
        <p>Comments</p>
        <form id="Scheduleservice" class="comment-form">
            <textarea asp-for="Comments"></textarea>
            <input type="checkbox" asp-for="havePet" value="true" required /> <label style="font-size: 13px; color: #646464;"> have pets at home</label>
        </form>
        <hr style="margin-top: 20px; size: 0.5px;">
        <button type="submit" class="btn continue-btn " onclick="getServiceDetails()"><a href="">Continue</a></button>
    </div>
</div>